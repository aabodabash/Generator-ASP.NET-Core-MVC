<#@ include file = "..\..\..\..\Base\Templates\Include.tt" #>
<# var model = (SmartAppInfo)Model; #>
@using Microsoft.AspNetCore.Identity
@using <#= model.Id #>.Backend.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form
        asp-area=""
        asp-controller="GeneratorAccount"
        asp-action="Logout"
        method="post"
        id="logoutForm"
        class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a
                    asp-area=""
                    asp-controller="GeneratorManage"
                    asp-action="Index"
                    title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button
                    type="submit"
                    class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a
            asp-area=""
            asp-controller="GeneratorAccount"
            asp-action="Register">Register</a></li>
        <li><a
            asp-area=""
            asp-controller="GeneratorAccount"
            asp-action="Login">Log in</a></li>
    </ul>
}